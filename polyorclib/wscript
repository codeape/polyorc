
def configure(ctx):
    print("polyorclib configure")
    ctx.standard_defs()
    ctx.libckok('json-c', 'json/json.h')
    ctx.write_config_header('config.h')

def build(ctx):
    ctx.stlib(
        target          = 'polyorclib',
        export_includes = '.',
        includes        = '.',
        source          = ['polyorctypes.c',
                           'polyorcutils.c',
                           'polyorcmatcher.c',
                           'polyorcbintree.c',
                           'polyorcout.c'],
        cflags          = [ '-Wall', '-g' ],
        name            = "intern_polyorclib"
    )
